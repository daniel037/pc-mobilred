<% include layouts/header.ejs %>
  <br>
  <div class="container">
    <h1><%= title %></h1><br> 
  </div>
  <div class="container">    
    <div class="accordion accordion-flush" id="accordionFlushExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            <H3>Seguridad Electr√≥nica</H3>
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <div class="row">
              <% for(var i=0; i<productos.length; i++) { %>
                <% if (productos[i].id_tipo_producto == 1) { %>                      
                  <div class="col-sm-3">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title"><%= productos[i].nombre %></h5>
                        <img src="<%=productos[i].imagen %>" class="card-img-top" alt="">
                        <p class="card-text">
                          <h5>$<%= productos[i].precio %></h5>
                        </p>
                        <a href="/compra/<%= productos[i].id %>" class="btn btn-outline-primary">Agregar Carrito</a>
                        <a href="/detalle/<%= productos[i].id %>" class="btn btn-outline-info">Detalle</a>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingTwo">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
            <h3>Accesorios</h3>
          </button>
        </h2>
        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <div class="row">
              <% for(var i=0; i<productos.length; i++) { %>
                <% if (productos[i].id_tipo_producto == 2) { %>                      
                  <div class="col-sm-3">
                    <div class="card">
                      <div class="card-body">
                        <h5 class="card-title"><%= productos[i].nombre %></h5>
                        <img src="<%=productos[i].imagen %>" class="card-img-top" alt="">
                        <p class="card-text">
                          <h5>$<%= productos[i].precio %></h5>
                        </p>
                        <a href="/compra/<%= productos[i].id %>" class="btn btn-outline-primary">Agregar al Carrito</a>
                        <a href="/detalle/<%= productos[i].id %>" class="btn btn-outline-info">Detalle</a>
                      </div>
                    </div>
                  </div>
                <% } %>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include layouts/footer.ejs %>
